<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mainVBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.clientViewController">
    <children>
        <Label text="KLIENCI" underline="true">
            <font>
                <Font size="36.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="800.0">
         <children>
            <ComboBox prefHeight="25.0" prefWidth="174.0">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </ComboBox>
            <Label alignment="CENTER" text="=" textAlignment="CENTER" />
            <TextField prefHeight="25.0" prefWidth="436.0">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
            <Button mnemonicParsing="false" text="Szukaj">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <CheckBox mnemonicParsing="false" text="Aktywny">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </CheckBox>
         </children>
      </HBox>
        <TableView fx:id="clientTableView" prefHeight="345.0" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="idClientColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="Lp." />
                <TableColumn fx:id="shortNameColumn" prefWidth="75.0" text="Skrót" />
                <TableColumn fx:id="fullNameColumn" prefWidth="75.0" text="Pełna nazwa" />
                <TableColumn fx:id="postCodeColumn" prefWidth="75.0" text="Kod pocztowy" />
                <TableColumn fx:id="cityColumn" prefWidth="75.0" text="Miejscowość" />
                <TableColumn fx:id="streetColumn" prefWidth="75.0" text="Ulica" />
            <TableColumn fx:id="houseNumberColumn" prefWidth="75.0" text="Nr domu" />
            <TableColumn fx:id="flatNumberColumn" prefWidth="75.0" text="Nr mieszkania" />
            <TableColumn fx:id="statusColumn" prefWidth="75.0" text="Status" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="addClientButton" mnemonicParsing="false" onAction="#addClient" prefHeight="50.0" prefWidth="100.0" text="Nowy">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="editClientButton" mnemonicParsing="false" onAction="#editClient" prefHeight="50.0" prefWidth="100.0" text="Edytuj">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
            <Button fx:id="checkClientButton" mnemonicParsing="false" onAction="#choseClient" text="Wybierz" />
            </children>
        </HBox>
    </children>
</VBox>
